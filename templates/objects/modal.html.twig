<!--begin::Modal-->
<div id="modal-{{action}}" class="modal micromodal-slide" aria-hidden="true">
	<!-- begin::Modalclose -->
	<div class="modal__overlay" tabindex="-1">
		<!--begin::Page-->
		<div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-{{action}}-title">
			<!--begin::Wrapper-->
			<header class="modal__header">
				<!-- btnCloseModal -->
				<span class="fs-9">[ Fermer ]</span>
        		<button class="modal__close fs-1 text-strong" aria-label="Close modal" data-micromodal-close></button>
			</header>
			<!--end::Wrapper-->
			<!--begin::Content-->
			<div id="modal-{{action}}-content" class="modal__content">
                <iframe
					id="iframe-modal-{{action}}"
                    title="action modal"
                    width="100%"
                    height="{{modal_height}}"
                    allowTransparency="true" 
                    frameborder="0" 
                    scrolling="yes"
                    src="{{modal_path}}">
                </iframe>
			</div>
			<!--end::Content-->
		</div>
		<!--end::Page-->
	</div>
	<!--end::Modalclose-->
</div>
<!--end::Modal-->