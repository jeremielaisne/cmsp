{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block class_body %}class="header-fixed header-tablet-and-mobile-fixed aside-fixed bg-primary"{% endblock %}

{% block body %}
<!--begin::Container-->
<div class="container h-100" id="kt_content_container">
    <div class="row align-items-center h-100">
        <div class="col-12">
            <!--begin::Login-->
            <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('logout')}}">Déconnexion</a>
                </div>
            {% endif %}

                <div class="row">
                    <span class="col-8 flex-item"><img src="{{asset('assets/img/f1.png')}}" class="w-25"/></span>
                    <span class="col-4 flex-item"></span>
                </div>

                <div class="row bg-dark rounded text-light p-5">            
                    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>

                    <div class="row mb-3 fs-7">
                        <label for="inputEmail">Email</label>
                        <div class="col">
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        </div>
                    </div>
                    <div class="row mb-3 fs-7">
                        <label for="inputPassword">Mot de passe</label>
                        <div class="col">
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                        </div>
                    </div>

                    <input type="hidden" name="_crsf_token" value="{{ csrf_token('authenticate')}}">
                    
                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" checked>
                        <label class="fs-6">
                            Se rappeler
                        </label>
                    </div>

                    <div class="d-flex flex-row-reverse">
                        <button class="btn btn-success" type="submit">Valider</button>
                    </div>
                </div>
            </form>
            <!--end::Login-->
        </div>
    </div>
</div>
<!--end::Container-->
{% endblock %}