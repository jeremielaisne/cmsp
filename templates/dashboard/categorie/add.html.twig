{% extends 'base.html.twig' %}

{% block body %}
<!--begin::Container-->
<div id="kt_categorie_container" class="fs-7 p-1">
    <!--begin::About card-->
    <div class="card p-5 border">
        
        <h4>Ajout d'une catégorie</h4>
		<!--begin::Body-->
        {# templates/dashboard/add-contenu.html.twig #}
        {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="pb-5">
                {{ form_row(form.libelle)}}
            </div>
            <div class="pb-5">
                {{ form_row(form.description)}}
            </div>
            <div class="pb-5">
                {{ form_row(form.champs)}}
                <p class="text-secondary fs-9">Attention ! Les champs sélectionnés ne seront plus modifiable par la suite</p>
            </div>
            <div class="pb-5">
                {{ form_row(form.zone)}}
            </div>
            <div class="d-flex flex-row-reverse">
                {{ form_row(form.save, {'label' : 'Valider'})}}
                {# <a class="modal__close btn btn-danger fs-7 p-3 m-1">Retour</a> #}
            </div>

        {{ form_rest(form) }} 
        <!--end::Body-->
    </div>
    <!--end::About card-->
</div>
<!--end::Container-->
{% endblock %}


{% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $('.select2-enable').select2({
            placeholder: 'Selectionnez un champ'
        });
    </script>
{% endblock %}